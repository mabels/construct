<<BASH]
#!/bin/bash
hostname=`hostname`
ARGS=$@
if [ $hostname != "" ]
then
hostname=`grep '^\s*[^#]' /etc/hostname`
fi
if [ "$hostname" != "#{@host.name}" ]
then
echo 'You try to run a deploy script on a host which has not the right name $hostname != #{@host.name}'
exit 47
else
echo Configure Host #{@host.name}
fi
BASH
