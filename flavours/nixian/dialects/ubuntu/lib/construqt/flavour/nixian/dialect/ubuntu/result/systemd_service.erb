[Unit]
Description=<%= self.get_description %>
<% @befores.each do |before| -%>
Before=<%= before %>
<% end -%>
<% @afters.each do |after| -%>
After=<%= after %>
<% end -%>
<% @requires.each do |req| -%>
Requires=<%= req %>
<% end -%>

[Service]
Type=<%= @type %>
<% @exec_starts.each do |exec_start| -%>
ExecStart=<%= exec_start %>
<% end -%>
<% @exec_stops.each do |exec_stop| -%>
ExecStop=<%= exec_stop %>
<% end -%>
<% @exec_stop_posts.each do |exec_stop_post| -%>
ExecStopPost=<%= exec_stop_post %>
<% end -%>
<% @restart_directives.each do |restart| -%>
Restart=<%= restart %>
<% end -%>

[Install]
<% @wanted_bys.each do |wanted_by| -%>
WantedBy=<%= wanted_by %>
<% end -%>
<% @alsos.each do |also| -%>
Also=<%= also %>
<% end -%>
