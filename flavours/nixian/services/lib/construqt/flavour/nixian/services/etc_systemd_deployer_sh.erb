
if [ -e  $(/usr/bin/which systemctl) ]
then
  systemctl daemon-reload
  for i in $(systemctl list-unit-files | grep '^construqt-' | awk '{print $1}' | \
      grep \
<% services.values.each do |srv| -%>
       -e <%= srv.get_name %> \
<% end -%>
       -v)
  do
<% if do_start_stop -%>
    systemctl stop $i
<% end -%>
    systemctl disable $i
  done
<% services.values.each do |srv| -%>
  systemctl enable <%= srv.get_name %>
<% if do_start_stop -%>
  systemctl start <%= srv.get_name %>
<% end -%>
<% end -%>
fi
